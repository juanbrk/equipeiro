<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccionTipoFutbolActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtVSeleccionarTipoFutbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECCIONE TIPO DE FUTBOL"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/radioGroupTipoFutbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="100dp">

            <RadioButton
                android:id="@+id/rbtnF5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="Futbol 5" />

            <RadioButton
                android:id="@+id/rbtnF7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:checked="false"
                android:text="Futbol 7" />

            <RadioButton
                android:id="@+id/rbtnF11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="Futbol 11" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSeleccionarTipoFutbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onButtonClicked"
            android:text="SELECCIONAR" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>